//Jenkins file only to tutorial example
pipeline {
  agent any
    
  tools {nodejs "nodejs"}
    
  stages {
        
    stage('Cloning Git') {
      steps {
        git 'https://github.com/gustavoapolinario/node-todo-frontend'
      }
    }
        
    stage('Install dependencies') {
      steps {
        bat 'npm install'
      }
    }
     
    stage('Test') {
      steps {
         bat 'npm test'
      }
    }
    
    stage('CURL') {
      steps: {
        bat 'curl -X GET "https://jsonplaceholder.typicode.com/todos/1"'
      }
    }
  }
  
   post {
     success {
       echo 'Build SUCCESS'
     }
   }
  
}
